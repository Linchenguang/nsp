{
  "depends": [
    "jian"
  ],

  "projs": {
    "default": {
      "extends": "serial-release"
    },

    "serial-release": {
      "target": "nsp",
      "cxx_flags": ["-std=c++14", "-pthread"],
      "threads": 16,
      "dirs": ["nsp", "src"]
    },

    "test": {
      "extends": "para-release",
      "target": "nsp-test",
      "dirs": ["test"]
    },

    "serial-debug": {
      "extends": "serial-release",
      "build_type": "Debug"
    },

    "para-release": {
      "extends": "serial-release",
      "cxx_compiler": "$ENV{MPI_HOME}/bin/mpicxx",
      "defs": ["JN_PARA"]
    },

    "para-debug": {
      "extends": "para-release",
      "build_type": "Debug"
    }
  }
}
